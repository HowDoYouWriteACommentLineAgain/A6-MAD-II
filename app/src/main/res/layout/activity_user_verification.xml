<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/muted_olive"
    tools:context=".UserVerification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:textSize="48dp"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textColor="@color/forest_green"

            android:textStyle="bold"
            android:text="Login" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            app:boxStrokeWidth="0sp"
            app:boxBackgroundColor="@color/sage_green"
            app:boxCornerRadiusBottomStart  ="12dp"
            app:boxCornerRadiusBottomEnd    ="12dp"
            app:boxCornerRadiusTopStart     ="12dp"
            app:boxCornerRadiusTopEnd       ="12dp"

            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            >



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
             />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0sp"
            app:boxBackgroundColor="@color/sage_green"
            app:boxCornerRadiusBottomStart  ="12dp"
            app:boxCornerRadiusBottomEnd    ="12dp"
            app:boxCornerRadiusTopStart     ="12dp"
            app:boxCornerRadiusTopEnd       ="12dp"

            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/LoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Start Gardening"
            android:textSize="24dp"
            android:backgroundTint="@color/sage_green"
            android:fontFamily="casual"
            android:paddingHorizontal="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias=".60"
            app:layout_constraintTop_toTopOf="@+id/frameLayout" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-80dp"
            app:srcCompat="@drawable/wave" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>